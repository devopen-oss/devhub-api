{
    "name": "hitori",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build -p src/tsconfig.json",
        "format": "rome format src test --write",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "rome check src test --apply",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "db:migrate": "prisma migrate dev",
        "db:generate": "prisma generate",
        "db:push": "prisma db push && prisma generate",
        "db:deploy": "prisma migrate deploy",
        "update:i": "pnpm up --interactive",
        "update:f": "pnpm up --latest",
        "postinstall": "husky install .github/husky && pnpm db:generate"
    },
    "dependencies": {
        "@apollo/server": "^4.7.0",
        "@devoxa/prisma-relay-cursor-connection": "^2.2.2",
        "@nestjs/apollo": "^11.0.5",
        "@nestjs/axios": "^2.0.0",
        "@nestjs/common": "^9.4.0",
        "@nestjs/config": "^3.0.0",
        "@nestjs/core": "^9.4.0",
        "@nestjs/graphql": "^11.0.5",
        "@nestjs/jwt": "^10.0.3",
        "@nestjs/passport": "^9.0.3",
        "@nestjs/platform-express": "^9.4.0",
        "@nestjs/schedule": "^3.0.1",
        "@prisma/client": "^4.13.0",
        "@sapphire/bitfield": "^1.1.0",
        "argon2": "^0.30.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "graphql": "^16.6.0",
        "nestjs-prisma": "^0.20.0",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "prisma-nestjs-graphql": "^18.0.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.1",
        "@commitlint/config-conventional": "^17.6.1",
        "@nestjs/cli": "^10.3.0",
        "@nestjs/schematics": "^9.1.0",
        "@nestjs/testing": "^9.4.0",
        "@sapphire/ts-config": "4.0.0",
        "@types/express": "^4.17.17",
        "@types/jest": "29.5.1",
        "@types/node": "18.15.12",
        "@types/passport": "^1.0.12",
        "@types/passport-jwt": "^3.0.8",
        "@types/supertest": "^2.0.12",
        "@types/validator": "^13.7.15",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^8.0.3",
        "jest": "29.5.0",
        "lint-staged": "^13.2.1",
        "prisma": "^4.13.0",
        "rome": "^12.0.0",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "29.1.0",
        "ts-loader": "^9.4.2",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "4.2.0",
        "tslib": "^2.5.0",
        "typescript": "^5.0.4"
    },
    "engines": {
        "node": ">=16",
        "npm": ">=7"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "formatter": "@commitlint/format"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.{mjs,js,ts}": [
            "rome format --write",
            "rome check --apply",
            "rome check"
        ]
    }
}
