{
    "name": "hitori",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build -p src/tsconfig.json",
        "format": "rome format src test --write",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "rome check src test --apply",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "db:migrate": "prisma migrate dev",
        "db:generate": "prisma generate",
        "db:push": "prisma db push && prisma generate",
        "db:deploy": "prisma migrate deploy",
        "update:i": "pnpm up --interactive",
        "update:f": "pnpm up --latest",
        "postinstall": "husky install .github/husky && pnpm db:generate"
    },
    "dependencies": {
        "@apollo/server": "^4.10.0",
        "@devoxa/prisma-relay-cursor-connection": "^2.2.4",
        "@nestjs/apollo": "^11.0.6",
        "@nestjs/axios": "^2.0.0",
        "@nestjs/common": "^9.4.3",
        "@nestjs/config": "^3.1.1",
        "@nestjs/core": "^9.4.3",
        "@nestjs/graphql": "^11.0.6",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/passport": "^9.0.3",
        "@nestjs/platform-express": "^9.4.3",
        "@nestjs/schedule": "^3.0.4",
        "@prisma/client": "^4.16.2",
        "@sapphire/bitfield": "^1.2.1",
        "argon2": "^0.31.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "graphql": "^16.8.1",
        "nestjs-prisma": "^0.22.0",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "prisma-nestjs-graphql": "^18.1.2",
        "reflect-metadata": "^0.2.1",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.8.1",
        "@commitlint/config-conventional": "^17.8.1",
        "@nestjs/cli": "^9.5.0",
        "@nestjs/schematics": "^9.2.0",
        "@nestjs/testing": "^9.4.3",
        "@sapphire/ts-config": "4.0.1",
        "@types/express": "^4.17.21",
        "@types/jest": "29.5.11",
        "@types/node": "18.19.6",
        "@types/passport": "^1.0.16",
        "@types/passport-jwt": "^3.0.13",
        "@types/supertest": "^2.0.16",
        "@types/validator": "^13.11.8",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^8.0.3",
        "jest": "29.7.0",
        "lint-staged": "^13.3.0",
        "prisma": "^4.16.2",
        "rome": "^12.1.3",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "29.1.1",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "4.2.0",
        "tslib": "^2.6.2",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=16",
        "npm": ">=7"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ],
        "formatter": "@commitlint/format"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "*.{mjs,js,ts}": [
            "rome format --write",
            "rome check --apply",
            "rome check"
        ]
    }
}
